<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/hotpink" />
            <stroke android:width="5dp" android:color="@color/blue" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="0" android:centerColor="@color/yellow" android:endColor="@color/beige" android:startColor="@color/blue" android:type="linear" />
            <stroke android:width="3dp" android:color="@color/black" />
        </shape>
    </item>

</selector>